{
    "name": "globify-frontend",
    "version": "1.0.0",
    "description": "Globify - Spotify Client",
    "scripts": {
        "build": "tsc && tsc-alias -p tsc-alias.config.json",
        "watch": "concurrently \"tsc --watch\" \"tsc-alias --watch -p tsc-alias.config.json\"",
        "serve": "npx serve . -l 8080",
        "dev": "concurrently \"tsc --watch\" \"tsc-alias --watch -p tsc-alias.config.json\" \"browser-sync start --config bs-config.js\""
    },
    "devDependencies": {
        "typescript": "^5.3.0",
        "serve": "^14.2.0",
        "browser-sync": "^3.0.0",
        "concurrently": "^8.2.0",
        "tsc-alias": "^1.8.0"
    }
}